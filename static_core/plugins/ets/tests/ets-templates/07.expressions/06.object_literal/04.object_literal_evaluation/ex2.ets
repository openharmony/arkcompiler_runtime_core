/*---
desc: >-
    The execution of the object literal completes abruptly if so does the execution of a name-value pair.
---*/

class A {
    name: string = ""
    age: number
    getAge(): number {
        return this.age
    }
}

let a: A|null = null;

function getAge(a: A|null): number {
    return a!.getAge()
}

function foo(): void {
  let a: A|null = null;
  a = { name: "Bob", age: getAge(a) } as A
}

let checkException = (e: Error): boolean => { return e instanceof NullPointerError }

function main() {
    arktest.expectThrow(() => foo(), checkException)
    arktest.assertEQ(a, null);
}